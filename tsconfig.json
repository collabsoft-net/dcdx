{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2022",
    "lib": [
      "dom",
      "ES2022",
    ],
    "module": "ES2022",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "src/types/*.d.ts",
    "src/types/**/*.d.ts"
  ],
  "compileOnSave": false,
}
